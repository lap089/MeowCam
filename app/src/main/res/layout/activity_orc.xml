<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.test_camera.MainSource.OcrActivity"
    android:orientation="vertical">



    <ImageView
        android:scaleType="centerInside"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/orcimage"
        android:layout_weight="1"
        />


    <EditText android:id="@+id/recognizedtext" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/saveButton_id"
            android:src="@drawable/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/mailbutton"
            android:id="@+id/mailButton_id"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>

</LinearLayout>
