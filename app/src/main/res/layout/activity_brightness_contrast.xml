<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.test_camera.MainSource.BrightnessContrastActivity"
    android:orientation="vertical">

    <android.opengl.GLSurfaceView
        android:id="@+id/mEffectView_id"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.93"
        />
    <SeekBar
        android:id="@+id/mBrightnessSeekBar_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:id="@+id/mContrastSeekBar_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Save"
        android:id="@+id/saveCurrentFrameButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
