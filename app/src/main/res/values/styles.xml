<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Dialogbottom">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Dialogtoptobottom">
        <item name="android:windowEnterAnimation">@anim/slide_down_top</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/Dialogbottom</item>
    </style>

    <style name="Toptobottom" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/Dialogtoptobottom</item>
    </style>
</resources>
